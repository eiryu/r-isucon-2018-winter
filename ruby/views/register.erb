<form method="POST" enctype="multipart/form-data">
  <div class="form-group row">
    <label for="username" class="col-sm-2 col-form-label">ユーザ名</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="username" id="username" placeholder="kamome_tarou">
    </div>
  </div>
  <div class="form-group row">
    <label for="password" class="col-sm-2 col-form-label">パスワード</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" name="password" id="password" placeholder="kamome">
    </div>
  </div>
  <div class="form-group row">
    <label for="lastname" class="col-sm-2 col-form-label">氏</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="lastname" id="lastname" placeholder="かもめ">
    </div>
  </div>
  <div class="form-group row">
    <label for="firstname" class="col-sm-2 col-form-label">名</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" name="firstname" id="firstname" placeholder="太郎">
    </div>
  </div>
  <div class="form-group row">
    <label for="icon" class="col-sm-2 col-form-label">アイコン画像</label>
    <div class="col-sm-10">
      <input type="file" class="form-control-file" name="icon" id="icon">
    </div>
  </div>
  <button type="submit" class="btn btn-primary">登録</button>
</form>
